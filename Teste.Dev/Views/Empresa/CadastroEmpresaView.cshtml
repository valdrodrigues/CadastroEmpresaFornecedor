@model Teste.Dev.Domain.Entidade.Empresa
@{
    ViewBag.Title = "Cadastro de empresa";
}

<div class="page-title">
    <h4>@(ViewBag.Title)</h4>
    <a href="javascript: history.back()"><i class="hicon-arrowl"></i></a>
</div>

<div class="main-content">
    <form asp-action="Salvar">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Codigo" class="control-label"></label>
            <input asp-for="Codigo" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="CNPJ" class="control-label"></label>
            <input asp-for="CNPJ" class="form-control cnpj-validation" />
        </div>

        <div class="form-group">
            <label asp-for="NomeFantasia" class="control-label">Nome</label>
            <input asp-for="NomeFantasia" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="UF" class="control-label"></label>
            <input asp-for="UF" class="form-control uf-validation" />
        </div>

        <div class="form-group">
            <label asp-for="Control" class="control-label" hidden></label>
            <input asp-for="Control" class="form-control" hidden />
        </div>

        <div class="form-group">
            <label asp-for="Id" class="control-label" hidden></label>
            <input asp-for="Id" class="form-control" hidden />
        </div>

        <span class="btn-wrp mb-20">
            <span class="text-danger" data-valmsg-for="Geral" data-valmsg-replace="false"></span>
            <input type="submit" class="btn btn-primary" value="Salvar informações" />
        </span>

        @if (Model.Control == 1)
        {
            <span class="btn-wrp mb-20">
                <a class="btn btn-primary btn-sm" href="@Url.Action("Deletar", "Empresa", new { Id = Model.Id })">Excluir</a>
            </span>
        }
    </form>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>

        function maskCNPJ() {
            $('.cnpj-validation').mask('00.000.000/0000-00', { reverse: true });
        }

        function maskUF() {
            $('.uf-validation').mask('AA');
        }

        $(document).ready(function () {
            maskCNPJ();
            maskUF();
        });

    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}